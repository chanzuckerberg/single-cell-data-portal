FROM public.ecr.aws/lambda/python:3.8

COPY backend/apps/upload_failures/requirements.txt requirements.txt
RUN pip3 install -r requirements.txt

COPY backend/apps/upload_failures .
COPY backend/__init__.py ./backend/__init__.py
COPY backend/apps/__init__.py ./backend/apps/__init__.py
COPY backend/apps/common ./backend/apps/common
COPY backend/apps/dataset_processing ./backend/apps/dataset_processing
COPY backend/apps/upload_failures ./backend/apps/upload_failures

ARG HAPPY_BRANCH="unknown"
ARG HAPPY_COMMIT=""
LABEL branch=${HAPPY_BRANCH}
LABEL commit=${HAPPY_COMMIT}
ENV COMMIT_SHA=${HAPPY_COMMIT}
ENV COMMIT_BRANCH=${HAPPY_BRANCH}

CMD ["app.handle_failure"]
